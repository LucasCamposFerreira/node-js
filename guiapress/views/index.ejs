<%-include ("partials/header.ejs") %>
<%- include("partials/homenavbar.ejs") %>
<body>
  <div class="container">
    <hr>
    <div class="jumbotron">
      <h1 class="display-4">Seja bem vindo!</h1>
      <p class="lead">Essa é uma plataforma disponibilizada para a criação de artigos, aproveite!</p>
      <hr class="my-4">
      <p> Os artigos estão em conjunto de Categorias, caso precise procurar, vá em busca das categorias, facilitará seu serviço.</p>
    </div>
    <% articles.forEach(article => { %>

    <div class="card">
      <div class="card-header">
        <h2><%= article.title %> </h2>
      </div>
      <div class="card-body">
        <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
      </div>
    </div>
    <br>

    <% }) %>
  </div>
</body>

<%-include ("partials/footer.ejs") %>