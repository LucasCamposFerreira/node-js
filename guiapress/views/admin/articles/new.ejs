<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>

<div class="container">
  <hr>
  <div class="card">
    <div class="card-header">
      <h2>Novo artigo</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/articles/save">
        <input type="text" name="title" placeholder="Defina o tÃ­tulo do artigo" class="form-control"><br>
        <textarea class="form-control" name="body" placeholder="Escreva o artigo..." id="article"></textarea><br>
        <select name="category" class="form-control">
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>"><%= category.title %></option>
          <% }) %>
        </select><br>
        <button class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>
</div>

<%- include("../../partials/footer.ejs") %>

