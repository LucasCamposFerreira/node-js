<body>
  <%-include("partials/navbar.ejs")  %>
  <div class="container" id="formPergunta">
    <div class="card">
      <div class="card-header">
        <h3>Realizar pergunta:</h3>
      </div>
      <div class="card-body">
        <form method="post" action="/saveQuestion">
          <label for="title">Título</label>
          <input id="title" name="title" type="text" class="form-control" placeholder="Título">
          <label for="description">Descrição</label>
          <textarea id="description" name="description" class="form-control" placeholder="Descreva a sua pergunta aqui" cols="30"
            rows="10"></textarea>
          <br>
          <button class="btn btn-dark">Enviar pergunta</button>
        </form>
      </div>
    </div>
  </div>
</body>
